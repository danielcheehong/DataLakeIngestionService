{
  "datasetId": "hr-employees-oracle",
  "name": "HR Employee Data",
  "description": "Extract employee data from Oracle HR database",
  "enabled": false,
  "cronExpression": "0 */1 * * * ?",

  "source": {
    "type": "Oracle",
    "connectionStringKey": "HROracleDB",
    "extractionType": "Package",
    "packageName": "HR_PKG",
    "procedureName": "GET_EMPLOYEE_DATA",
    "parameters": {
      "p_department_id": "0",
      "p_active_only": "Y"
    },
    "commandTimeout": 600
  },

  "transformations": [
    {
      "type": "DataCleansing",
      "enabled": true,
      "environments": ["Development", "Staging", "Production"],
      "order": 1,
      "config": {
        "trimWhitespace": true,
        "removeEmptyStrings": false
      }
    },
    {
      "type": "DataValidation",
      "enabled": true,
      "environments": ["Development","Staging", "Production"],
      "order": 2,
      "config": {
        "requiredColumns": ["EMPLOYEE_ID", "EMAIL", "HIRE_DATE"],
        "validateEmail": true
      }
    }
  ],

  "parquet": {
    "fileNamePattern": "hr_employees_{date:yyyyMMdd}_{time:HHmmss}.parquet",
    "compressionCodec": "Snappy",
    "rowGroupSize": 10000,
    "enableStatistics": true
  },

  "upload": {
    "provider": "FileSystem",
    "fileSystemConfig": {
      "basePath": "",
      "relativePath": "hr/employees/"
    },
    "overwriteExisting": false,
    "enableRetry": true,
    "maxRetries": 3
  },

  "notifications": {
    "onSuccess": false,
    "onFailure": true,
    "channels": ["email"]
  },

  "metadata": {
    "owner": "HR Team",
    "contact": "hr-team@company.com",
    "tags": ["hr", "employees", "oracle"]
  }
}
